<Window x:Class="WPF_1461390_Project.Categories.EditCat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_1461390_Project.Categories"
        mc:Ignorable="d"
        Title="Chỉnh sửa danh mục sản phẩm" Width="450" Height="100">
    <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Label HorizontalAlignment="Center" FontSize="16">Nhập tên mới của danh mục sản phẩm</Label>
        <StackPanel x:Name="ucBrowse" Orientation="Horizontal">
            <TextBox x:Name="txtBrowse" Width="370" HorizontalAlignment="Left" Margin="5,5,5,5" TextWrapping="Wrap"  />
            <Button Name="btnOK" Width="50" Margin="5" >OK</Button>
        </StackPanel>
    </StackPanel>
</Window>
