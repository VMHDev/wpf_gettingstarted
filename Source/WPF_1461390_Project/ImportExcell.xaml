<Window xmlns:UserControls="clr-namespace:WPF_1461390_Project.UserControls"  x:Class="WPF_1461390_Project.ImportExcell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_1461390_Project"
        mc:Ignorable="d"
        Title="Import Excell" Width="450" Height="135">
    <StackPanel  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Label HorizontalAlignment="Center" FontSize="16">Vui lòng chọn file Excell để import dữ liệu</Label>
        <StackPanel x:Name="ucBrowse" Orientation="Horizontal">
            <TextBox x:Name="txtBrowse" Width="300" HorizontalAlignment="Left" Margin="5,5,5,5" TextWrapping="Wrap" TextChanged="txtBrowse_TextChanged" />
            <Button x:Name="btnBrowse" Width="100" HorizontalAlignment="Right" Margin="15,5,5,5"  Content="Browse" Click="btnBrowse_Click" />
        </StackPanel>
        <Button Name="btnOK" Width="50" Margin="5" Click="btnOK_Click">OK</Button>
    </StackPanel>
</Window>
